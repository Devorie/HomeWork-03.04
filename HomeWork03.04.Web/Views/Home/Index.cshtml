@using HomeWork03._04.Data.wwwroot
@model SimchasViewModel

<<div class="header">
    <h1 class="text-primary">Simchas</h1>
</div>
<div class="row header">
    <div class="col-md-4">
        <button class="btn btn-danger" id="new-simcha">New Simcha</button>
    </div>
</div>     
<div class="table-responsive mt-3">
                <table class="table table-hover table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Contributions</th>
                            <th>Simcha Name</th>
                            <th>Contributor Count</th>
                            <th>Total</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Simcha s in Model.Simchas)
                        {
                            <tr>
                                <td>
                                <a href="/home/contributions?id=@s.Id" class="btn btn-primary">Contributions</a>
                                </td>
                                <td>@s.Title </td>
                            <td>@s.Contributions / @Model.Contributors</td>
                                <td>@s.Total.ToString("C")</td>
                                <td>@s.Date.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
        </div>

<div class="modal fade new-simcha" tabindex="1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">New Simcha</h5>
                <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" action="/home/addSimcha">
                    <div class="form-group">
                        <label class="form-label">Simcha Name</label>
                        <input class="form-control" name="SimchaName" placeholder="Simcha Name" type="text" />
                    </div>
                    <div class="form-group mt-3">
                        <label class="form-label">Date</label>
                        <input type="date" name="date" class="form-control" id="date" />
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary cancel" type="button" data-bs-dismiss="modal">Cancel</button>
                        <button class="btn btn-primary" name="commit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

@section Scripts {
    <script src="/js/AddSimcha.js"></script>
}
